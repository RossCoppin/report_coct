file = {:C$\backslash$:/Users/Hp/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Pakhomov, Kaehler, Mcquaid - Unknown - Zooplankton community structure in the kelp beds of the sub-Antarctic Prince Edward Archipelago a.pdf:pdf},
isbn = {0722-4060},
issn = {07224060},
journal = {Polar Biology},
number = {10},
pages = {778--788},
title = {{Zooplankton community structure in the kelp beds of the sub-Antarctic Prince Edward Archipelago: are they a refuge for larval stages?}},
volume = {25},
year = {2002}
}
